{
  "name": "lp-manager-contracts",
  "version": "1.0.0",
  "description": "The contracts to manage different LP in ethereum based blockchains",
  "scripts": {
    "compile": "npx hardhat compile",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "test-specific": "ENV=unit-test npx hardhat test --grep",
    "test": "ENV=unit-test npx hardhat test",
    "coverage": "npx hardhat coverage",
    "clean": "npx hardhat clean && rm -rf artifacts cache coverage type-chains",
    "deltaNeutral::deploy": "npx hardhat run ./scripts/deltaNeutral/deploy.ts --network ${NETWORK}",
    "deltaNeutral::deltaNeutral": "npx hardhat run ./scripts/deltaNeutral/strategies/deltaNeutral.ts --network ${NETWORK}",
    "deltaNeutral::getPosition": "npx hardhat run ./scripts/deltaNeutral/getPosition.ts --network ${NETWORK}",
    "deltaNeutral::fund": "npx hardhat run ./scripts/deltaNeutral/fund.ts --network ${NETWORK}",
    "deltaNeutral::rebalance": "npx hardhat run ./scripts/deltaNeutral/rebalance.ts --network ${NETWORK}",
    "deltaNeutral::estimateCakeApr": "npx hardhat run ./scripts/deltaNeutral/estimateCakeApr.ts --network ${NETWORK}",
    "deltaNeutral::checkRatio": "npx hardhat run ./scripts/deltaNeutral/checkRatio.ts --network ${NETWORK}",
    "deltaNeutral::close": "npx hardhat run ./scripts/deltaNeutral/close.ts --network ${NETWORK}",
    "deltaNeutral::withdraw": "npx hardhat run ./scripts/deltaNeutral/withdraw.ts --network ${NETWORK}",
    "deltaNeutral::upgrade": "npx hardhat run scripts/deltaNeutral/upgrade.ts --network ${NETWORK}"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.10",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.10",
    "@openzeppelin/contracts": "5.3.0",
    "@openzeppelin/contracts-upgradeable": "5.3.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "@uniswap/v3-core": "https://github.com/Uniswap/v3-core.git#0.8",
    "@uniswap/v3-periphery": "https://github.com/Uniswap/v3-periphery.git#0.8",
    "chai": "^4.3.6",
    "dotenv": "^16.4.7",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^6.13.5",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^11.1.0",
    "prettier": "^3.5.2",
    "prettier-plugin-solidity": "^1.4.2",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@uniswap/sdk-core": "^7.7.1",
    "@uniswap/v3-sdk": "^3.25.2",
    "axios": "^1.10.0"
  }
}
